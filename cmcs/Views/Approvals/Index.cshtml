@{
    ViewData["Title"] = "Approval Page";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">Pending Claims</h1>
    <div class="d-flex gap-2">
        <select class="form-select form-select-sm" style="width:auto">
            <option selected>Filter: Pending</option>
            <option>Approved</option>
            <option>Rejected</option>
        </select>
        <input type="search" class="form-control form-control-sm" style="width:220px" placeholder="Search by lecturer..." />
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Lecturer</th>
                        <th>Date</th>
                        <th>Hours</th>
                        <th>Rate</th>
                        <th>Total</th>
                        <th>Document</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>J. Maseko</td>
                        <td>2025-08-30</td>
                        <td>6</td>
                        <td>R 400</td>
                        <td>R 2,400</td>
                        <td><button class="btn btn-sm btn-outline-secondary">View</button></td>
                        <td><span class="badge bg-warning text-dark">Pending</span></td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#approveModal">Approve</button>
                            <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal">Reject</button>
                        </td>
                    </tr>
                    <tr>
                        <td>N. Patel</td>
                        <td>2025-08-29</td>
                        <td>4</td>
                        <td>R 420</td>
                        <td>R 1,680</td>
                        <td><button class="btn btn-sm btn-outline-secondary">View</button></td>
                        <td><span class="badge bg-warning text-dark">Pending</span></td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#approveModal">Approve</button>
                            <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal">Reject</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <p class="text-secondary small mb-0">Admins can verify supporting documents and approve/reject claims (mock actions).</p>
    </div>
</div>

<!-- Approve Modal -->
<div class="modal fade" id="approveModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Approve Claim</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Confirm approval of this claim? (Visual only)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" data-bs-dismiss="modal">Approve</button>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Reject Claim</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <label class="form-label">Reason (optional)</label>
                <textarea class="form-control" rows="3" placeholder="Short explanation..."></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Reject</button>
            </div>
        </div>
    </div>
</div>
